{
  "extends": ["tslint-config-airbnb", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "**/node_modules/**",
      "**/.git/**",
      "**/lib/**",
      "**/dist/**",
      "./packages/util/**/*",
      "./packages/g/**/*",
      "./packages/torch/**/*",
      "./packages/istanbul/**/*"
    ]
  },
  "rules": {
    "import-name": [false],
    "function-name": [false],
    "variable-name": [true, "ban-keywords", "allow-pascal-case", "allow-snake-case"],
    "object-shorthand-properties-first": [false],
    "no-increment-decrement": [false],
    "no-console": [true, "log"],
    "no-debugger": true,
    "arrow-parens": true,
    "no-this-assignment": false
  }
}
